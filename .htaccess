RewriteEngine On

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Handle direct .php access
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Prevent directory listing
Options -Indexes

# Handle 404 errors
ErrorDocument 404 /la-rosacomponents/error/404.php

# Handle 500 errors
ErrorDocument 500 /la-rosacomponents/error/500.php

# Handle 403 errors (forbidden)
ErrorDocument 403 /la-rosacomponents/error/404.php

# Handle 401 errors (unauthorized)
ErrorDocument 401 /la-rosacomponents/error/404.php